# .env.local.example - PWA Environment Variables Template
# Copy this file to .env.local and fill in your values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# Web Push VAPID Keys
# Generate these using: node scripts/generate-vapid.js
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your-public-vapid-key
VAPID_PRIVATE_KEY=your-private-vapid-key
VAPID_EMAIL=mailto:your-email@example.com

# PWA Configuration
NEXT_PUBLIC_APP_NAME=Your App Name
NEXT_PUBLIC_APP_SHORT_NAME=AppName
NEXT_PUBLIC_APP_DESCRIPTION=Your app description
NEXT_PUBLIC_APP_THEME_COLOR=#000000
NEXT_PUBLIC_APP_BACKGROUND_COLOR=#ffffff

# API URLs (if different from production)
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Analytics (optional)
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Sentry Error Tracking (optional)
NEXT_PUBLIC_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Development Settings
NEXT_PUBLIC_DEV_MODE=true
DISABLE_PWA_DEV=false

# Feature Flags
NEXT_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_BACKGROUND_SYNC=true
NEXT_PUBLIC_ENABLE_WEB_SHARE=true
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=true

# Cache Configuration (in seconds)
NEXT_PUBLIC_CACHE_STATIC_ASSETS=31536000  # 1 year
NEXT_PUBLIC_CACHE_IMAGES=2592000          # 30 days
NEXT_PUBLIC_CACHE_API=300                 # 5 minutes
NEXT_PUBLIC_CACHE_SUPABASE_STORAGE=2592000 # 30 days

# Security
NEXT_PUBLIC_CSP_REPORT_URI=/api/csp-report
NEXT_PUBLIC_ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com

# Database (for local development with Docker)
DATABASE_URL=postgresql://postgres:password@localhost:5432/your-db
DIRECT_URL=postgresql://postgres:password@localhost:5432/your-db

# Redis (for caching - optional)
REDIS_URL=redis://localhost:6379
